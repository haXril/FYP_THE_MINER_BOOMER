<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#95FAAF93"
    app:cardCornerRadius="30dp"
    android:layout_marginHorizontal="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonClose"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/buttoncls"/>
        </LinearLayout>

        <TextView
            android:id="@+id/titleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="AVATAR"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/instructTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#e33636"
            android:text="Please sellect your fv avatar"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar1"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar2"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="15dp">

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar3"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar4"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar5"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="15dp">

                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar6"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/avatar7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar7"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/avatar8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar8"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="15dp">

                <ImageView
                    android:id="@+id/avatar9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar9"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>